{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#f0ece3",
  "data": {
    "url": "data/GE14_GE15_Voters.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "filter": "datum.GENERAL_ELECTION == 'GE14' || datum.GENERAL_ELECTION == 'GE15'"
    },
    {
      "calculate": "datum.GENERAL_ELECTION == 'GE14' ? 'GE14' : 'GE15'",
      "as": "Election"
    },
    {
      "aggregate": [
        {"op": "sum", "field": "NUMBER_OF_ELECTORS", "as": "people"}
      ],
      "groupby": ["AGE_RANGE", "Election"]
    },
    {
      "window": [{"op": "sum", "field": "people", "as": "total"}],
      "frame": [null, null],
      "groupby": ["Election"]
    },
    {
      "calculate": "parseFloat(datum.people) / parseFloat(datum.total)",
      "as": "percentage"
    }
  ],
  "spacing": 0,
  "hconcat": [
    {
      "height": 545,
      "width": 200,
      "transform": [
        {"filter": {"field": "Election", "equal": "GE14"}},
        {"filter": "datum.people >= voterSelection.people"}
      ],
      "title": {
        "text": "GE14",
        "fontSize": 20,
        "anchor": "middle",
        "color": "#CD5C08"
      },
      "layer": [
        {
          "mark": "bar",
          "encoding": {
            "y": {
              "field": "AGE_RANGE",
              "axis": null,
              "sort": "descending",
              "scale": {"domain": ["90+","80-89","70-79","60-69","50-59","40-49","30-39","21-29","18-20"]}
            },
            "x": {
              "aggregate": "sum",
              "field": "people",
              "title":  null,
              "axis": {
                "format": "s",
                "domain": false,
                "ticks": false,
                "labelFontSize": 14,
                "labelPadding": 20,
                "labelColor": "#88827e"
              },
              "scale": {"domain": [5000000, 0]}  
            },
            "color": {
              "field": "Election",
              "scale": {"range": ["#CD5C08", "#295F98"]},
              "legend": null
            },
            "opacity": {
              "condition": {"selection": "ageSelection", "value": 1},
              "value": 0.3
            },
            "tooltip": [
              {"field": "AGE_RANGE", "type": "ordinal", "title": "Age Range"},
              {"field": "people", "type": "quantitative", "title": "Number of Electors"}
            ]
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "middle",
            "dx": -55,
            "fontSize": 14,
            "color": "#000000"
          },
          "encoding": {
            "y": {
              "field": "AGE_RANGE",
              "axis": null,
              "sort": "descending",
              "scale": {"domain": ["90+","80-89","70-79","60-69","50-59","40-49","30-39","21-29","18-20"]}
            },
            "x": {
              "aggregate": "sum",
              "field": "people",
              "scale": {"domain": [5000000, 0]}  
            },
            "text": {
              "field": "percentage",
              "type": "quantitative",
              "format": ".2%"
            },
            "opacity": {
              "condition": {
                "selection": "ageSelection",
                "value": 1
              },
              "value": 0.3
            }
          }
        },
        {
          "transform": [
            {
              "aggregate": [
                {"op": "sum", "field": "people", "as": "total"}
              ]
            }
          ],
          "layer": [
            {
              "mark": {
                "type": "rule",
                "color": "#414141",
                "strokeWidth": 1
              },
              "encoding": {
                "x": {"value": 140},
                "x2": {"value": 90},
                "y": {"value": 510},
                "y2": {"value": 510}
              }
            },
            {
              "mark": {
                "type": "text",
                "align": "left",
                "dx": -150,
                "dy": 220,
                "fontSize": 14.5,
                "font":"Calibri"
              },
              "encoding": {
                "text": {
                  "value": "Undi-18 is not"
                },
                "color": {"value": "black"}
              }
            },
            {
              "mark": {
                "type": "text",
                "align": "left",
                "dx": -150,
                "dy": 235,
                "fontSize": 14.5,
                "font":"Calibri"
              },
              "encoding": {
                "text": {
                  "value": "introduced in GE14 yet"
                },
                "color": {"value": "black"}
              }
            },
            {
              "mark": {
                "type": "rule",
                "color": "#414141",
                "strokeWidth": 1
              },
              "encoding": {
                "x": {"value": 200},
                "x2": {"value": 100},
                "y": {"value": 390},
                "y2": {"value": 350}
              }
            },
            {
              "mark": {
                "type": "text",
                "align": "left",
                "dx": -150,
                "dy": 25,
                "fontSize": 15,
                "font":"Calibri"
              },
              "encoding": {
                "text": {
                  "value": "Same as GE15,"
                },
                "color": {"value": "black"}
              }
            },
            {
              "mark": {
                "type": "text",
                "align": "left",
                "dx": -150,
                "dy": 40,
                "fontSize": 15,
                "font":"Calibri"
              },
              "encoding": {
                "text": {
                  "value": "electors of age 30-39"
                },
                "color": {"value": "black"}
              }
            },
            {
              "mark": {
                "type": "text",
                "align": "left",
                "dx": -150,
                "dy": 55,
                "fontSize": 15,
                "font":"Calibri"
              },
              "encoding": {
                "text": {
                  "value": "have more political"
                },
                "color": {"value": "black"}
              }
            },
            {
              "mark": {
                "type": "text",
                "align": "left",
                "dx": -150,
                "dy": 70,
                "fontSize": 15,
                "font":"Calibri"
              },
              "encoding": {
                "text": {
                  "value": "awareness than others"
                },
                "color": {"value": "black"}
              }
            }
          ]
        }
      ]
    },
    {
      "height": 545,
      "width": 50,
      "view": {"stroke": null},
      "selection": {
        "ageSelection": {
          "type": "multi",
          "fields": ["AGE_RANGE"],
          "init": [{"AGE_RANGE": "18-20"}, {"AGE_RANGE": "30-39"}]        
        },
        "voterSelection": {
          "type": "single",
          "fields": ["people"],
          "bind": {"input": "range", "min": 0, "max": 5000000, "step":100000, "name": "Minimum Number Of Electors:"},
          "init": {"people": 0}
        }
      },
      "mark": {
        "type": "text",
        "align": "center",
        "size": 13,
        "color": "#46423f"
      },
      "encoding": {
        "y": {"field": "AGE_RANGE", "type": "ordinal", "axis": null, "sort": "descending"},
        "text": {"field": "AGE_RANGE", "type": "ordinal"}
      }
    },
    {
      "height": 545,
      "width": 200,
      "transform": [
        {"filter": {"field": "Election", "equal": "GE15"}},
        {"filter": "datum.people >= voterSelection.people"}
      ],
      "title": {
        "text": "GE15",
        "fontSize": 20,
        "anchor": "middle",
        "color": "#295F98"
      },
      "layer": [
        {
          "mark": "bar",
          "encoding": {
            "y": {
              "field": "AGE_RANGE",
              "title": null,
              "axis": null,
              "sort": "descending",
              "scale": {"domain": ["90+","80-89","70-79","60-69","50-59","40-49","30-39","21-29","18-20"]}
            },
            "x": {
              "aggregate": "sum",
              "field": "people",
              "title": "Number of Electors",
              "axis": {
                "labelColor": "#88827e",
                "format": "s", 
                "domain": false, 
                "ticks": false, 
                "labelFontSize": 14,
                "labelPadding": 20
              },
              "scale": {"domain": [0, 5000000]} 
            },
            "color": {
                "value": "#295F98"
            },
            "opacity": {
              "condition": {"selection": "ageSelection", "value": 1},
              "value": 0.3
            },
            "tooltip": [
              {"field": "AGE_RANGE", "type": "ordinal", "title": "Age Range"},
              {"field": "people", "type": "quantitative", "title": "Number of Electors"}
            ]
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "middle",
            "dx": 10,
            "fontSize": 1,
            "color": "#000000"
          },
          "encoding": {
            "y": {
              "field": "AGE_RANGE",
              "axis": null,
              "sort": "descending",
              "scale": {"domain": ["90+","80-89","70-79","60-69","50-59","40-49","30-39","21-29","18-20"]}
            },
            "x": {
              "aggregate": "sum",
              "field": "people",
              "title" : null,
              "scale": {"domain": [0, 5000000]}  
            },
            "text": {
              "field": "percentage",
              "type": "quantitative",
              "format": ".3%"
            },
            "opacity": {
              "condition": {
                "selection": "ageSelection",
                "value": 1
              },
              "value": 0.3
            }
          }
        },
        {
          "transform": [
            {
              "aggregate": [
                {"op": "sum", "field": "people", "as": "total"}
              ]
            }
          ],
          "layer": [
            {
              "mark": {
                "type": "rule",
                "color": "#414141",
                "strokeWidth": 1
              },
              "encoding": {
                "x": {"value": 100},
                "x2": {"value": 130},
                "y": {"value": 380},
                "y2": {"value": 130}
              }
            },
            {
              "mark": {
                "type": "text",
                "align": "left",
                "dx": -10,
                "dy": -200,
                "fontSize": 15,
                "font":"Calibri"
              },
              "encoding": {
                "text": {
                  "value": "Electors of age 30-39"
                },
                "color": {"value": "black"}
              }
            },
            {
              "mark": {
                "type": "text",
                "align": "left",
                "dx": -10,
                "dy": -185,
                "fontSize": 15,
                "font":"Calibri"
              },
              "encoding": {
                "text": {
                  "value": "have more political"
                },
                "color": {"value": "black"}
              }
            },
            {
              "mark": {
                "type": "text",
                "align": "left",
                "dx": -10,
                "dy": -170,
                "fontSize": 15,
                "font":"Calibri"
              },
              "encoding": {
                "text": {
                  "value": "awareness than others"
                },
                "color": {"value": "black"}
              }
            }
          ]
        }
      ]
    }
  ],
  "config": {
    "view": {"stroke": null},
    "axis": {"grid": false}
  }
}