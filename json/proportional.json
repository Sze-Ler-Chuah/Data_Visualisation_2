{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "data/GE15_Absent_Impact.csv",
    "format": {"type": "csv"}
  },
  "width": 700,
  "height": 550,
  "background": null,
  "transform": [
    {
      "calculate": "parseFloat(datum['Seats Won'])", "as": "Won Seats"
    },
    {
      "calculate": "parseFloat(datum['Second Place (Absent Vote > Winning Majority)'])", "as": "Second Place (Absent Vote > Winning Majority)"
    },
    {
      "calculate": "parseFloat(datum['Potential Winning Seats'])", "as": "Potential Winning Seats"
    },
    {
      "fold": ["Won Seats", "Second Place (Absent Vote > Winning Majority)", "Potential Winning Seats"],
      "as": ["Category", "Value"]
    },
    {
      "joinaggregate": [
        {"op": "min", "field": "Value", "as": "minValue"},
        {"op": "max", "field": "Value", "as": "maxValue"}
      ],
      "groupby": ["Category"]
    },
    {
      "calculate": "(datum.Value - datum.minValue) / (datum.maxValue - datum.minValue)",
      "as": "norm_val"
    },
    {
      "calculate": "(datum.maxValue + datum.minValue) / 2",
      "as": "midValue"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "rule",
        "color": "#000"
      },
      "encoding": {
        "x": {"field": "Category", "type": "nominal"}
      }
    },
    {
      "selection": {
        "partyFilter": {
          "type": "multi",
          "fields": ["PARTY"],
          "bind": "legend",
          "init": {"PARTY": "PH"}
        }
      },
      "mark": "line",
      "encoding": {
        "color": {
          "type": "nominal", 
          "field": "PARTY",
          "scale": {
            "domain": ["BN", "PH", "PN", "GPS", "GRS", "PBM", "KDM", "Warisan", "Muda", "Independent"],
            "range": ["#0169ba", "#f6441e","#9944b9","#e6a700","#54b3e3","#b07f69","#f39c60","#ea7dcd","#950300","#645665"]
          },
          "legend": {
            "title": "Party",
            "orient": "right",
            "direction": "vertical",
            "labelFontSize": 14,
            "titleFontSize": 18,
            "offset": -80,
            "symbolSize": 500
          }
        },
        "opacity": {
          "condition": {"selection": "partyFilter", "value": 1},
          "value": 0.1
        },
        "strokeWidth": {
          "condition": {"selection": "partyFilter", "value": 5},
          "value": 2
        },
        "detail": {"type": "nominal", "field": "Index"},
        "x": {
          "type": "nominal",
          "field": "Category",
          "scale": {
            "domain": ["Won Seats", "Second Place (Absent Vote > Winning Majority)", "Potential Winning Seats"]
          }
        },
        "y": {
          "type": "quantitative",
          "field": "norm_val",
          "axis": null
        },
        "tooltip": [
          {"type": "nominal", "field": "PARTY", "title": "Party"},
          {"type": "quantitative", "field": "Won Seats"},
          {"type": "quantitative", "field": "Second Place (Absent Vote > Winning Majority)", "title": "Second Place"},
          {"type": "quantitative", "field": "Potential Winning Seats"}
        ]
      }
    },
    {
      "encoding": {
        "x": {"type": "nominal", "field": "Category"},
        "y": {"value": 0}
      },
      "layer": [
        {
          "mark": {"type": "text", "style": "label"},
          "encoding": {
            "text": {"aggregate": "max", "field": "maxValue"}
          }
        },
        {
          "mark": {"type": "tick", "style": "tick", "size": 8, "color": "#ccc"}
        }
      ]
    },
    {
      "encoding": {
        "x": {"type": "nominal", "field": "Category"},
        "y": {"value": 250}
      },
      "layer": [
        {
          "mark": {"type": "text", "style": "label"},
          "encoding": {
            "text": {"aggregate": "max", "field": "midValue"}
          }
        },
        {
          "mark": {"type": "tick", "style": "tick", "size": 8, "color": "#ccc"}
        }
      ]
    },
    {
      "encoding": {
        "x": {"type": "nominal", "field": "Category"},
        "y": {"value": 500}
      },
      "layer": [
        {
          "mark": {"type": "text", "style": "label"},
          "encoding": {
            "text": {"aggregate": "max", "field": "minValue"}
          }
        },
        {
          "mark": {"type": "tick", "style": "tick", "size": 8, "color": "#ccc"}
        }
      ]
    },
    {
      "mark": {
        "type": "text",
        "color": "#aa0081",
        "dx": -15,
        "dy": -5,
        "fontSize": 15
      },
      "encoding": {
        "x": {
          "type": "nominal",
          "field": "Category",
          "scale": {
            "domain": ["Won Seats", "Second Place (Absent Vote > Winning Majority)", "Potential Winning Seats"]
          }
        },
        "y": {
          "type": "quantitative",
          "value": 112
        },
        "text": {"value": "112"}
      },
      "transform": [
        {"filter": "datum.Category === 'Potential Winning Seats'"}
      ]
    },
    {
      "transform": [
        {
          "aggregate": [
            {"op": "min", "field": "Potential Winning Seats", "as": "minPotential Winning Seats"}
          ]
        }
      ],
      "layer": [
        {
          "mark": {
            "type": "rule",
            "color": "black",
            "strokeWidth": 1
          },
          "encoding": {
            "x": {"value": 440},
            "x2": {"value": 435},
            "y": {"value": 0},
            "y2": {"value": 15}
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "dx": 30,
            "dy": -250,
            "fontSize": 15,
            "font":"Calibri"
          },
          "encoding": {
            "text": {
              "value": "With a higher turnout rate,"
            },
            "color": {"value": "black"}
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "dx": 30,
            "dy": -235,
            "fontSize": 15,
            "font":"Calibri"
          },
          "encoding": {
            "text": {
              "value": "coalition government is"
            },
            "color": {"value": "black"}
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "dx": 30,
            "dy": -220,
            "fontSize": 15,
            "font":"Calibri"
          },
          "encoding": {
            "text": {
              "value": "unnecessary."
            },
            "color": {"value": "black"}
          }
        },
        {
          "mark": {
            "type": "rule",
            "color": "black",
            "strokeWidth": 1
          },
          "encoding": {
            "x": {"value": 400},
            "x2": {"value": 420},
            "y": {"value": 90},
            "y2": {"value": 250}
          }
        },
        {
          "mark": {
            "type": "rule",
            "color": "black",
            "strokeWidth": 1
          },
          "encoding": {
            "x": {"value": 430},
            "x2": {"value": 420},
            "y": {"value": 200},
            "y2": {"value": 250}
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "dx": 30,
            "dy": 10,
            "fontSize": 15,
            "font":"Calibri"
          },
          "encoding": {
            "text": {
              "value": "Even with a higher turnout"
            },
            "color": {"value": "black"}
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "dx": 30,
            "dy": 25,
            "fontSize": 15,
            "font":"Calibri"
          },
          "encoding": {
            "text": {
              "value": "rate, the need to form a"
            },
            "color": {"value": "black"}
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "dx": 30,
            "dy": 40,
            "fontSize": 15,
            "font":"Calibri"
          },
          "encoding": {
            "text": {
              "value": "coalition government"
            },
            "color": {"value": "black"}
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "dx": 30,
            "dy": 55,
            "fontSize": 15,
            "font":"Calibri"
          },
          "encoding": {
            "text": {
              "value": "reamins unchanged."
            },
            "color": {"value": "black"}
          }
        }
      ]
    }
  ],
  "config": {
    "axisX": {
      "domain": false, 
      "labelAngle":0, 
      "tickColor": "#000", 
      "title": null,
      "labelFontSize": 13,
      "labelLimit": 300
    },
    "view": {"stroke": null},
    "style": {
      "label": {
        "baseline": "middle", 
        "align": "right", 
        "dx": -5, 
        "dy":-10, 
        "fontSize": 14,
        "color": "#5a554f"
      },
      "tick": {"orient": "horizontal"}
    }
  }
}