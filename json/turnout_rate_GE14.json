{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Turnout Rate for Malaysiaâ€™s 14th General Election",
    "font": "Tahoma",
    "fontSize": 40,
    "fontWeight": "bold",
    "color": "black",
    "offset": 50
  },
  "width": 1250,
  "height": 500,
  "background": "#F0EBE3",
  "projection": {"type": "mercator", "scale": 3400, "center": [109.5, 3.5]},
  "data": {
    "url": "./json/mas_parliament.json",
    "format": {"type": "topojson", "feature": "malaysia.parlimen"}
  },
  "params": [
    {
      "name": "minTurnout",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100,
        "step": 5,
        "name": "Minimum Turnout Rate: "
      },
      "view": "left"
    },
    {
      "name": "maxTurnout",
      "value": 100,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100,
        "step": 5,
        "name": "Maximum Turnout Rate: "
      }
    }
  ],
  "layer": [
    {
      "data" : {"sphere": true},
      "mark" : {"type": "geoshape", "fill": "#afd7f0"}
    },
    {
      "data": {"graticule": {"step": [5, 5]}},
      "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.5, "strokeOpacity": 0.5, "fill": "none"}
    },
    {
      "data": {
        "url": "json/neighbour_country.json",
        "format": {"type": "topojson", "feature": "custom.geo"}
      },
      "mark": {"type": "geoshape", "fill": "#d3d3d3", "stroke": "white", "strokeWidth": 0.5}
    },
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.name",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "transform": [
        {
          "lookup": "properties.code_parlimen",
          "from": {
            "data": {
              "url": "data/GE14_Parliament_Elections.csv"
            },
            "key": "PARLIAMENTARY CODE",
            "fields": ["STATE", "TURNOUT", "PARLIAMENTARY NAME", "PARLIAMENTARY CODE", "LATITUDE", "LONGITUDE"]
          }
        },
        {
          "calculate": "datum.TURNOUT / 100",
          "as": "Turnout Rate"
        },
        {
          "calculate": "datum['PARLIAMENTARY CODE'] + ' - ' + datum['PARLIAMENTARY NAME']",
          "as": "Parliamentary Code and Name"
        },
        {
          "filter": "datum.TURNOUT >= minTurnout && datum.TURNOUT <= maxTurnout"
        }
      ],
      "layer": [
        {
          "mark": {"type": "geoshape", "stroke": "#3c3d37"},
          "encoding": {
            "color": {
              "field": "TURNOUT",
              "type": "quantitative",
              "scale": {
                "type": "threshold",
                "domain": [60, 65, 70, 75, 80, 85, 90, 95, 100],
                "range": ["#fff5eb", "#fee6ce", "#fdd0a2", "#fdae6b", "#fd8d3c", "#f16913", "#d94801", "#a63603", "#7f2704", "#67000d"]
              },
              "legend": {
                "title": "Turnout Rate(%)",
                "orient": "bottom-right",
                "direction": "horizontal",
                "labelFontSize": 14,
                "titleFontSize": 16
              }
            },
            "tooltip": [
              {"field": "STATE", "type": "nominal", "title": "State"},
              {"field": "Parliamentary Code and Name", "type": "nominal", "title": "Parliamentary"},
              {"field": "Turnout Rate", "type": "quantitative", "title": "Turnout Rate", "format": ".2%"}
            ]
          }
        }
      ]
    },
    {
      "data": {
        "url": "data/GE14_Parliament_Elections.csv"
      },
      "transform": [
        {
          "aggregate": [
            {"op": "min", "field": "TURNOUT", "as": "minTurnout"},
            {"op": "max", "field": "TURNOUT", "as": "maxTurnout"}
          ]
        },
        {
          "lookup": "minTurnout",
          "from": {
            "data": {
              "url": "data/GE14_Parliament_Elections.csv"
            },
            "key": "TURNOUT",
            "fields": ["PARLIAMENTARY NAME", "PARLIAMENTARY CODE", "LATITUDE", "LONGITUDE"]
          },
          "as": ["minParliamentaryName", "minParliamentaryCode", "minLatitude", "minLongitude"]
        },
        {
          "lookup": "maxTurnout",
          "from": {
            "data": {
              "url": "data/GE14_Parliament_Elections.csv"
            },
            "key": "TURNOUT",
            "fields": ["PARLIAMENTARY NAME", "PARLIAMENTARY CODE", "LATITUDE", "LONGITUDE"]
          },
          "as": ["maxParliamentaryName", "maxParliamentaryCode", "maxLatitude", "maxLongitude"]
        }
      ],
      "layer": [
        {
          "mark": {"type": "rule", "color": "#7D7C7C", "strokeWidth":2},
          "encoding": {
            "x": {"datum": 2.5, "type": "quantitative", "scale": {"domain": [0, 20]}, "axis":null},
            "x2": {"datum": 2.6, "type": "quantitative"},
            "y": {"datum": 4.5, "type": "quantitative","scale": {"domain": [0, 20]}, "axis":null},
            "y2": {"datum": 8.75, "type": "quantitative"}
          }
        },
        {
          "mark": {"type": "text", "align": "left", "fontSize": 15, "color": "black"},
          "encoding": {
            "x": {"datum": 1.5, "type": "quantitative"},
            "y": {"datum": 4, "type": "quantitative"},
            "text": {"value": "Putrajaya had one of the lowest number of electors,"}
          }
        },
        {
          "mark": {"type": "text", "align": "left", "fontSize": 15, "color": "black"},
          "encoding": {
            "x": {"datum": 1.5, "type": "quantitative"},
            "y": {"datum": 3.5, "type": "quantitative"},
            "text": {"value": "with most being civil servants who tended to be more"}
          }
        },
        {
          "mark": {"type": "text", "align": "left", "fontSize": 15, "color": "black"},
          "encoding": {
            "x": {"datum": 1.5, "type": "quantitative"},
            "y": {"datum": 3, "type": "quantitative"},
            "text": {"value": "politically engaged. This resulted in a high voter turnout rate. "}
          }
        },
        {
          "mark": {"type": "rule", "color": "#7D7C7C", "strokeWidth":2},
          "encoding": {
            "x": {"datum": 13, "type": "quantitative", "scale": {"domain": [0, 20]}},
            "x2": {"datum": 10.5, "type": "quantitative"},
            "y": {"datum": 5.5, "type": "quantitative","scale": {"domain": [0, 20]}},
            "y2": {"datum": 11, "type": "quantitative"}
          }
        },
        {
          "mark": {"type": "text", "align": "left", "fontSize": 15, "color": "black"},
          "encoding": {
            "x": {"datum": 7.5, "type": "quantitative"},
            "y": {"datum": 12.5, "type": "quantitative"},
            "text": {"value": "Due to limited access to political information and"}
          }
        },
        {
          "mark": {"type": "text", "align": "left", "fontSize": 15, "color": "black"},
          "encoding": {
            "x": {"datum": 7.5, "type": "quantitative"},
            "y": {"datum": 12, "type": "quantitative"},
            "text": {"value": "geographical isolation, Kapit turned out to be"}
          }
        },
        {
          "mark": {"type": "text", "align": "left", "fontSize": 15, "color": "black"},
          "encoding": {
            "x": {"datum": 7.5, "type": "quantitative"},
            "y": {"datum": 11.5, "type": "quantitative"},
            "text": {"value": "one of the seats with lowest voter turnout rate."}
          }
        }
      ]
    }
  ]
}