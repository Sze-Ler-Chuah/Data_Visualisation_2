{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 500,
  "height": 500,
  "padding": {"left": -150, "right": 10, "top": -100, "bottom": 10},  
  "background": "lightgray",
  "signals": [
    {"name": "radius", "update": "width / 2.5"}
  ],
  "data": [
    {
      "name": "table",
      "url": "data/GE_MULTI_WAY.CSV",
      "format": {"type": "csv"},
      "transform": [
        {
          "type": "filter",
          "expr": "datum.AMOUNT > 0"
        }
      ]
    },
    {
      "name": "keys",
      "source": "table",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["WAY_COUNT"]
        }
      ]
    },
    {
      "name": "GE14",
      "source": "table",
      "transform": [
        {
          "type": "filter",
          "expr": "datum.ELECTION === 'GE14'"
        }
      ]
    },
    {
      "name": "GE15",
      "source": "table",
      "transform": [
        {
          "type": "filter",
          "expr": "datum.ELECTION === 'GE15'"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "angular",
      "type": "point",
      "range": {"signal": "[-PI, PI]"},
      "padding": 0.5,
      "domain": {"data": "table", "field": "WAY_COUNT"}
    },
    {
      "name": "radial",
      "type": "linear",
      "range": {"signal": "[0, radius]"},
      "zero": true,
      "nice": false,
      "domain": {"data": "table", "field": "AMOUNT"},
      "domainMin": 0,
      "domainMax": 150
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": ["GE14", "GE15"],
      "range": ["#7E60BF", "#295F98"]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Election",
      "orient": "top-left",
      "offset": -250,
      "encode": {
        "symbols": {
          "update": {
            "shape": {"value": "circle"},
            "size": {"value": 100}
          }
        },
        "title": {
          "update": {
            "fontSize": {"value": 20},
            "fontWeight": {"value": "bold"}
          }
        },
        "labels": {
          "update": {
            "fontSize": {"value": 12}
          }
        }
      }
    }
  ],
  "encode": {
    "enter": {
      "x": {"signal": "radius"},
      "y": {"signal": "radius"}
    }
  },
  "marks": [
    {
      "type": "group",
      "name": "categories",
      "from": {
        "facet": {"data": "table", "name": "facet", "groupby": ["ELECTION"]}
      },
      "marks": [
        {
          "type": "line",
          "name": "category-line",
          "from": {"data": "facet"},
          "encode": {
            "enter": {
              "interpolate": {"value": "linear-closed"},
              "x": {"signal": "scale('radial', datum.AMOUNT) * cos(scale('angular', datum.WAY_COUNT))"},
              "y": {"signal": "scale('radial', datum.AMOUNT) * sin(scale('angular', datum.WAY_COUNT))"},
              "stroke": {"scale": "color", "field": "ELECTION"},
              "strokeWidth": {"value": 2},
              "fill": {"scale": "color", "field": "ELECTION"},
              "fillOpacity": {"value": 0.1}
            }
          }
        },
        {
          "type": "symbol",
          "name": "category-point-GE14",
          "from": {"data": "GE14"},
          "encode": {
            "enter": {
              "x": {"signal": "scale('radial', datum.AMOUNT) * cos(scale('angular', datum.WAY_COUNT))"},
              "y": {"signal": "scale('radial', datum.AMOUNT) * sin(scale('angular', datum.WAY_COUNT))"},
              "size": {"value": 50},
              "fill": {"value": "#7E60BF"},
              "tooltip": {
                "signal": "{Election: datum.ELECTION, Way: datum.WAY_COUNT, Amount: datum.AMOUNT}"
              }
            }
          }
        },
        {
          "type": "symbol",
          "name": "category-point-GE15",
          "from": {"data": "GE15"},
          "encode": {
            "enter": {
              "x": {"signal": "scale('radial', datum.AMOUNT) * cos(scale('angular', datum.WAY_COUNT))"},
              "y": {"signal": "scale('radial', datum.AMOUNT) * sin(scale('angular', datum.WAY_COUNT))"},
              "size": {"value": 50},
              "fill": {"value": "#295F98"},
              "tooltip": {
                "signal": "{Election: datum.ELECTION, Way: datum.WAY_COUNT, Amount: datum.AMOUNT}"
              }
            }
          }
        },
        {
          "type": "text",
          "name": "value-text",
          "from": {"data": "category-line"},
          "encode": {
            "enter": {
              "x": {"signal": "datum.x"},
              "y": {"signal": "datum.y"},
              "text": {"signal": "datum.datum.AMOUNT"},
              "align": {"value": "center"},
              "baseline": {"value": "top"},
              "fill": {"value": "black"},
              "fontWeight": {"value": "bold"},
              "fontSize": {"value": 15}
            }
          }
        }
      ]
    },
    {
      "type": "rule",
      "name": "radial-grid",
      "from": {"data": "keys"},
      "zindex": 1000,
      "encode": {
        "enter": {
          "x": {"value": 0},
          "y": {"value": 0},
          "x2": {"signal": "radius * cos(scale('angular', datum.WAY_COUNT))"},
          "y2": {"signal": "radius * sin(scale('angular', datum.WAY_COUNT))"},
          "stroke": {"value": "lightgray"},
          "strokeWidth": {"value": 1}
        }
      }
    },
    {
      "type": "text",
      "name": "key-label",
      "from": {"data": "keys"},
      "zindex": 1,
      "encode": {
        "enter": {
          "x": {"signal": "(radius + 40) * cos(scale('angular', datum.WAY_COUNT))"},
          "y": {"signal": "(radius + 40) * sin(scale('angular', datum.WAY_COUNT))"},
          "text": {"field": "WAY_COUNT"},
          "align": {"value": "center"},
          "baseline": {"value": "top"},
          "fill": {"value": "black"},
          "fontWeight": {"value": "bold"},
          "fontSize": {"value": 15}
        }
      }
    },
    {
      "type": "line",
      "name": "outer-line",
      "from": {"data": "radial-grid"},
      "encode": {
        "enter": {
          "interpolate": {"value": "linear-closed"},
          "x": {"field": "x2"},
          "y": {"field": "y2"},
          "stroke": {"value": "black"},
          "strokeWidth": {"value": 2}
        }
      }
    }
  ]
}
